{% extends "_layouts/cp" %}
{% import "_includes/forms" as forms %}

{# Link for the ? icon at the bottom of the page #}
{% set docsUrl = "https://github.com/oneplugin/one-plugin-media/blob/master/README.md" %}

{# The title of this CP section #}
{% set title = "OnePlugin Media" %}

{# The URL to this plugin's base CP section #}
{% set pluginCpUrl = url('one-plugin-media') %}

{# Get a URL to an image in our AssetBundle #}

{# Content that should appear in the page header#}
{% set extraPageHeaderHtml %}
    <div class="buttons">
        <a href="{{ pluginCpUrl }}" class="btn submit add icon">{{ "Click Me!"|t('one-plugin-media') }}</a>
    </div>
{% endset %}

{# The content of the CP Section#}
{% set content %}
    <h2>{{ "Index CP Section body goes here"|t('one-plugin-media') }}</h2>
    <img src="{{ iconUrl }}" height="64" width="64" />
    <p class="textline"></p>
{% endset %}
